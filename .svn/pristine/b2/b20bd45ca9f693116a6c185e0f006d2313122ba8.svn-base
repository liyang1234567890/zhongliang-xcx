/* pages/order/order.wxss */

Page {
  background: #ddd;
  font-size: 28rpx;
  overflow: hidden;
}

/*头部品类和地区选择模块开始*/

.header {
  position: fixed;
  width: 100%;
  background: #eee;
  font-size: 28rpx;
}

.header .kind {
  padding: 20rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header .kind view {
  width: 90rpx;
  height: 90rpx;
  font-size: 28rpx;
  background: #ddd;
  border-radius: 50%;
}

.kind image {
  margin: 2rpx auto;
  width: 40rpx;
  height: 40rpx;
  display: flex;
}

.header .kind text {
  margin-left: 20rpx;
}

/*头部品类和地区选择模块结束*/

/*订单信息展示开始*/

.order {
  padding-top: 160rpx;
  height: 860rpx;
}

.order image {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}

.order .order-message {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  padding-top: 20rpx;
}

.order-left {
  font-size: 30rpx;
  margin-left: 20rpx;
}

.order-right {
  margin-left: 390rpx;
  color: #888888;
}

.order-footer {
  margin-top: 20rpx;
  margin-left: 20rpx;
  padding-bottom: 20rpx;
}

.order-footer text {
  margin-left: 14rpx;
}

.order-footer .meg {
  color: #888888;
}

.order-footer image {
  width: 30rpx;
  height: 30rpx;
  color: #fff;
}

/*订单信息展示结束*/

/* 会员信息展示开始 */

.footer {
  position: fixed;
  width: 100%;
  bottom: 0rpx;
  height: 100%;
  background-color: rgba(0, 0, 0, .6);
}

.footer .message image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.vip {
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
}

.footer-message {
  background-color: #fff;
  margin-top: 440rpx;
  padding-bottom: 50rpx;
}

.footer-meg image {
  width: 50rpx;
  height: 50rpx;
}

.footer .member {
  margin: 0 auto;
  text-align: center;
}

.member {
  width: 100%;
  background-color: #7fc7a1;
  font-size: 30rpx;
  color: #fff;
  height: 90rpx;
  position: fixed;
  line-height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center
}

.member image {
  width: 40rpx;
  height: 40rpx;
}

.message {
  margin: 0 40rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.message-name text,
.message-area text {
  color: #888888;
}

.message-name {
  padding-top: 10rpx;
  display: inline-block;
}

.message-area {
  padding-top: 20rpx;
  display: inline-block;
  margin-left: 200rpx;
}

.border {
  width: 100%;
  height: 40rpx;
}

.situat {
  margin-left: 20rpx;
  padding-top: 20rpx;
}

.situat-rihgt {
  display: inline-block;
  padding-left: 166rpx;
}

.situat-left {
  display: inline-block;
  padding-left: 20rpx;
}

.situat image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.situat-nj {
  padding-top: 20rpx;
}

.situat-ls {
  padding-top: 20rpx;
}

.situat-nj text,
.situat-ls text {
  color: #888888;
}

/* 会员信息展示开始 */

/*遮罩层开始*/

/*遮罩层结束*/

.header .kind .selectKind {
  background-color: #1AAD19;
}