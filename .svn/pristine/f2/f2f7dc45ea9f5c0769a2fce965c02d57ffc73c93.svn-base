@import '../../../common/common.wxss';
.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1rpx #ccc solid;
  height: 80rpx;
}
 .app-add{
  border-top: 1rpx #ccc solid;
}
.form-label {
  width: 22%;
  font-weight: 600;
}
.form-input {
  flex: 1;
  background-color: rgb(249, 249, 249);
  border-radius: 6rpx;
  text-align: left;
}
.sub{
  width:90%; 
  margin-left: 5%;
}
.sub button{
  background-color: #7fc7a1;
}
.address{
  flex:1;
}