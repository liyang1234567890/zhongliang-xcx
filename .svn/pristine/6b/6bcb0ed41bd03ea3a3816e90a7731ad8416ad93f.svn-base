/* pages/order/order.wxss */

Page {
    background: #ddd;
    font-size: 28rpx;
    overflow: hidden;
  }
  /*头部品类和地区选择模块开始*/
  .header {
    position: fixed;
    width: 100%;
    background: #eee;
    font-size: 28rpx;
  }
  
  .header .kind {
    padding: 20rpx 20rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .header .kind view {
    width: 90rpx;
    height: 90rpx;
    font-size: 28rpx;
    background:#ddd;
    border-radius: 50%;
  }
  
  .kind image {
    margin: 0rpx auto;
    width: 40rpx;
    height: 40rpx;
    display: flex;
  }
  
  .header .kind text {
    margin-left: 20rpx;
  }
  
  
  /*头部品类和地区选择模块结束*/
  
  /*订单信息展示开始*/
  .order {
    padding-top: 160rpx;
    height: 750rpx;
  }
  
  .order image {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
  }
  
  .order .order-message {
    background-color: #fff;
    margin-bottom: 20rpx;
  }
  .order-header {
    display: flex;
    align-items: center;
    margin-left: 20rpx; 
    padding-top: 20rpx;
  }
  .order-left {
    font-size: 30rpx;
    margin-left: 20rpx;
  }
  .order-right {
    margin-left: 390rpx;
    color: #888888;
  }
  .order-footer {
    margin-top: 20rpx;
    margin-left: 20rpx;
    padding-bottom:20rpx;
  }
  
  .order-footer text {
    margin-left: 14rpx;
  }
  .order-footer .meg{
    color:#888888;
  }
  .order-footer image {
    width: 30rpx;
    height: 30rpx;
    color: #fff;
  }
  /*订单信息展示结束*/
  
  
  
  
  .footer {
    background-color: #fff;
    position: fixed;
    width: 100%;
    bottom: 17rpx;
    height: 416rpx;
  
  }
  .footer-meg {
    height: 200rpx;
  }
  .footer-meg image{
    width: 50rpx;
    height: 50rpx;
  }
  .footer-tip{
    width: 320rpx;
    margin: 0 auto;
    display: flex;
    align-items: center;
    margin-top: 14rpx;
  }
  .footer-tip image{
    margin-top: 2rpx;
  }
  .footer-meg button{
    width: 500rpx;
    height: 100rpx;
    background-color: #7fc7a1;
    color: #fff;
  }
  .footer .member {
    margin: 0 auto;
    text-align: center;
  }
  
  
  /*遮罩层开始*/
  .mask {
    width: 100%;
    height: 100%;
    background-color: rgba(83, 45, 83, 0.295);
    top: 0;
    bottom: 0;
    position: fixed;
    font-size: 28rpx;
    z-index: 1000;
    overflow: hidden
  }
  .introduction {
    color: #888888;
  }
  .introduce image{
    width: 100%;
    height: 370rpx;
  }
  .introduction view {
    margin: 0 auto;
  }
  .mask .introduce {
    width: 580rpx;
    margin: 0 auto;
    /* background: #fff; */
    position: relative;
    top: 152rpx;
  }
  .compare {
    width: 80%;
    margin: 0 auto;
  }
  .int-com{
    background: #fff;
    padding-top: 30rpx;
    margin-top: -40rpx;
    padding-bottom: 20rpx;
    margin-bottom: -20rpx;
  }
  .content {
    color: #888888;
  } 
  .introduce .title {
    width: 100%;
    font-size: 34rpx;
    font-weight: bolder;
  }
  .mask button{
    font-size: 36rpx;
    color: #7fc7a1;
  }
  .header .kind .selectKind{
    background-color: #7fc7a1;
    color: #fff;
  }
  /*遮罩层结束*/
  
  
  