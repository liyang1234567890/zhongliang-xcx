/* pages/rich/rich.wxss */
@import "./myrich/myrich.wxss";

.navbar {
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  right: 0;
}

/* glorylist start  */

.varColor {
  color: #777;
}

.detail .place {
  color: black;
}

.detail .name {
  font-size: 32rpx;
  flex: 1;
}

.detail .place {
  font-size: 28rpx;
  color: black;
}

.detail .time {
  font-size: 26rpx;
  flex: 1;
}

.scrollList {
  background-color: #f8f8f8;
}

.glorylist {
  margin-top: 75rpx;
}

.glorylist .flex-wrap {
  display: flex;
}

.regionPlace {
  width: 750rpx;
  margin-top: 25rpx;
  height: 100rpx;
  background-color: white;
  display: flex;
  align-items: center;
}

.regionPlace image {
  margin-left: 30rpx;
  margin-right: 30rpx;
  width: 60rpx;
  height: 60rpx;
}

.regionPlace address {
  font-size: 32rpx;
}

.glorylist .region {
  height: 90rpx;
  width: 750rpx;
  background-color: white;
}

.picker {
  display: flex;
  flex-direction: row;
  color: #333;
  font-size: 28rpx;
  background-color: #f8f8f8;
  align-items: center;
}

.area {
  display: flex;
  flex-direction: row;
  position: relative;
  border: 1rpx #ccc solid;
  background: #c3c3c3;
  color: c3c3c3;
  width: 170rpx;
  height: 90rpx;
}

.area-change {
  position: absolute;
  left: 0;
  color: #fff;
  width: 170rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  /* background: #333333; */
}

.area-total {
  position: absolute;
  left: 179rpx;
  display: flex;
  flex-direction: row;
}

.area-common {
  width: 170rpx;
  text-align: center;
  line-height: 90rpx;
}

.area address input {
  color: #c3c3c3;
  text-indent: -9999999rpx;
  /* width: 100rpx; */
}

.selectRegion image {
  width: 180rpx;
  height: 90rpx;
}

.selectRegion {
  display: flex;
  flex-direction: row;
  line-height: 60rpx;
  margin-right: 8rpx;
}

.comm {
  margin-right: 20rpx;
  border-radius: 10rpx;
  width: 180rpx;
  height: 60rpx;
  text-align: center;
}

.headPhoto {
  border: 2rpx solid #777;
  margin: 10rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.name-wrap {
  display: flex;
  flex-direction: row;
}

.glorylist .detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
  padding-top: 20rpx;
  flex: 1;
}

.richBox {
  margin-bottom: 4rpx;
  background-color: white;
  height: 130rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.navbar {
  flex: none;
  display: flex;
  background: #7fc7a1;
  color: #fff;
}

.navbar .item {
  position: relative;
  flex: 2;
  text-align: center;
  line-height: 100rpx;
}

.navbar .item.active {
  color: #fff;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 180rpx;
  right: 0;
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid #fff;
}

.tabChange {
  position: absolute;
  top: 140rpx;
  left: 25rpx;
  width: 400rpx;
}

/* topbar  end*/

.myrich {
  margin-top: 120rpx;
  position: fixed;
  z-index: 100;
}

/*空数据 start  */

.demoimg {
  padding-top: 100rpx;
  background-color: #fcfcfc;
  text-align: center;
  padding-bottom: 100rpx;
}

.demodata {
  background-color: #fcfcfc;
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  color: #949494;
  font-weight: 600;
  padding-bottom: 80rpx;
}

/*空数据 end  */
