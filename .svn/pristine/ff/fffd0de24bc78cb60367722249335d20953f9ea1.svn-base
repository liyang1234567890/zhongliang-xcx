<!--pages/order/dredge/dredge.wxml-->
<image class="dredge-header-bg" src="../../../mock/images/order/dredge-header-bg.png"></image>
<view class="swiper-tab">
  <view class='{{currentTab=="1"?"on":""}}' data-current="1" bindtap='swichTab'>无央会员</view>
  <view class='{{currentTab=="2"?"on":""}}' data-current="2" bindtap='swichTab'>贸易商</view>
</view>

<!--无央会员开始  -->
<view class='dredge-middle one' data-current="1" wx:if="{{currentTab == 1}}">
  <view class='name'>
    <view class="img">
      <image src='../../../mock/images/order/people.png'></image>
    </view>
    <input placeholder='请输入姓名' placeholder-class='placeholder' value='{{name}}' bindinput='nameValue'></input>
  </view>
  <view class='phone'>
    <view class="img">
      <image src='../../../mock/images/order/telephone.png'></image>
    </view>
    <input placeholder='请输入手机号' placeholder-class='placeholder' value='{{phone}}' bindinput='phoneValue' maxlength='11' type='number'></input>
  </view>
  <view class='choice'>
    <view class="img">
      <image src='../../../mock/images/order/choice.png'></image>
    </view>
    <input placeholder='请选择' placeholder-class='placeholder' value='{{choice}}' bindinput='choiceValue'></input>
  </view>
  <view class='address'>
    <view class="img">
      <image src='../../../mock/images/order/address.png'></image>
    </view>
    <input placeholder='请输入详细地址' placeholder-class='placeholder' value='{{address}}' bindinput='addressValue'></input>
  </view>
</view>
<button tyep="primary" class='btn' data-current="1" bindtap='{{currentTab=="1"?"submit":"submitMerchant"}}' wx:if="{{currentTab == 1}}">注 册</button>
<!--无央会员结束  -->
<!--贸易商下部开始  -->
<view class='dredge-middle two' data-current="2" wx:if="{{currentTab == 2}}">
  <view class='tel'>
    <view class='img'>
      <image src='../../../mock/images/order/telephone.png'></image>
    </view>
    <input placeholder='请输入手机号' placeholder-class='placeholder' maxlength='11' type='number' bindinput='phoneValue'></input>
    <view class='hint' bindtap='auth'>{{time}}</view>
  </view>
  <view class='verification'>
    <view class='img'>
      <image src='../../../mock/images/order/v-code.png'></image>
    </view>
    <input placeholder='请输入6位手机验证码' maxlength="6" placeholder-class='placeholder' type='number' bindinput='identifyingValue'></input>
  </view>
</view>
<!--贸易商下部结束 -->
<button tyep="primary" class='btn' data-current="2" bindtap='{{currentTab=="2"?"submitMerchant":"submit"}}' wx:if="{{currentTab == 2}}">注 册</button>
<view class='footer'>
  <text class='left'>已经注册?</text>
  <text class='right' bindtap='now'>立即登录</text>
</view>

