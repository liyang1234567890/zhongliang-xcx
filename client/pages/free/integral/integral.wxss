/* pages/free/integral/integral.wxss */
.header{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.banner{
  position: relative;
}
.order{
  font-size: 40rpx;
  color: white;
  position: absolute;
  top:15%;
  left: 15%;
  transform: translate(-50%,-50%);
  z-index: 9999;
}
.all{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  color: white;
  }
.draw,.detail{
  width: 80rpx;
  height: 80rpx;
  margin-right: 10rpx;
}
.check-detail{
  margin-left: 100rpx;
}
.cut{
  width: 2rpx;
  height: 82rpx;
  margin-left: 100rpx;
}
.exchange{
  margin-left: 60rpx;
}
.award{
  display: flex;
  
}
.draw,.detail{
  justify-content: space-between;
  vertical-align:middle;
}
.title{
  font-weight: bold;
  font-size: 32rpx;
  border-left: 4px solid #7fc7a1;
  padding-left: 20rpx;
}
.rule-detail{
  padding: 20rpx;
  word-break: break-all; 
  font-size: 28rpx; 
}
.rule{
  line-height: 50rpx;  
  padding: 20rpx; 
}
.rule .content{
  color: #9C9C9C;
  font-size: 28rpx;
}